
@model IEnumerable<Homework3.Models.News>
{@Layout = "_Layout" }
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>All news</title>
</head>
<body>
    @section NewsTable 
    {
        <table>
            <thead>
                <tr>
                    <th>ID </th>
                    <th>Title </th>
                    <th>Text </th>
                    <th>Author </th>
                    <th>Is it fake </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var article in Model)
                {
                    <tr>
                        <td>@article.Id</td>
                        <td>@article.Title</td>
                        <td>@article.Text</td>
                        <td>@article.AuthorName</td>
                        <td>@(article.IsFake? "That's fake":"That's true!")</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    </body>
</html>
